
@model List<ArticleVM>


<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">

        <div class="table-responsive text-nowrap">
            <a class="btn btn-success btn-sm mb-3 " asp-area="Admin" asp-controller="Article" asp-action="Add" ><i class='menu-icon bx bx-bookmark-plus'></i>Makale Oluştur</a>
            <table class="table table-Active" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturtulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
@*                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturtulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>*@
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                        <td>@item.Title</td>
                        <td>@item.Category.Name</td>
                        <td>@item.CreatedDate.ToShortDateString()</td>
                        <td>@item.CreatedBy</td>
                        <td>@(item.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                        <td><a class="btn btn-info btn-sm " data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-ArticleId="@item.Id" ><i class='bx bx-edit'></i></a>
                            <a class="btn btn-danger btn-sm " data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-ArticleId="@item.Id"><i class='bx bx-trash'></i></a>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->




</div>
@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}